                    <Border Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="#AAA" BorderThickness="0 0 0 1" />
                    <TextBlock Grid.Row="13" Grid.Column="0" Margin="5 2" Text="Orders" />
